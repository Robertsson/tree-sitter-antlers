;; Variables used in templates
(variable) @name.variable

;; Control structure keywords
[
  "if"
  "elseif" 
  "else"
  "endif"
  "unless"
  "endunless"
] @name.function

;; Collection and loop keywords
[
  "collection"
  "nav"
  "taxonomy" 
  "form"
] @name.class

;; Parameter names in tag parameters
(parameter_name) @name.property